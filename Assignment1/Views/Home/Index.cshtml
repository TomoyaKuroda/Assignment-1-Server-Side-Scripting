@{
    ViewBag.Title = "Question Database";
}
<style>
    /*change the background image*/
    .jumbotron {
        background-image: url("../../Content/Database-Security.jpg");
        background-size: cover;
        color:white;
    }
</style>
<div class="jumbotron">
    <img src="~/Content/cooltext301299826491211.png" alt="top image" />
    <p class="lead">This website stores information about questions and questioners.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <img src="~/Content/eight-teen-questions.jpg" alt="question image" style="width: 100%;
	height: 250px;"/>
        <h2 style="text-align: center;">@Html.ActionLink("Question page", "Index", "questions")</h2>
        <p>
            You may find interesting questions.
        </p>

    </div>
    <div class="col-md-6">
        <img src="~/Content/mcupload_57dfd3eaa1ec5.jpg" alt="questioner image" style="width: 100%;
	height: 250px;" />
        <h2 style="text-align: center;">@Html.ActionLink("Questioner page", "Index", "questioners")</h2>
        <p>This page shows questioner's first name, last name, email address, and phone number.</p>
    </div>
</div>

